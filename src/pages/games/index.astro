---
import BaseLayout from '@/layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('post');
const gamesPosts = posts
  .filter(post => post.data.category === 'Games')
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

const title = 'Games';
const description = 'Game reviews, recommendations, and guides';
---

<BaseLayout title={title} description={description}>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Games</h1>
    {gamesPosts.length === 0 ? (
      <p>No games posts yet.</p>
    ) : (
      <ul class="space-y-8">
        {gamesPosts.map(post => (
          <li>
            <a href={`/\( {post.collection}/ \){post.slug}/`} class="block hover:underline">
              <h2 class="text-2xl font-semibold">{post.data.title}</h2>
              <time class="text-sm text-gray-500">
                {new Date(post.data.publishDate).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' })}
              </time>
              {post.data.description && <p class="mt-2 text-gray-700">{post.data.description}</p>}
            </a>
          </li>
        ))}
      </ul>
    )}
  </main>
</BaseLayout>
