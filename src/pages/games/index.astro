---
import BaseLayout from '@/layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('post');

const gamesPosts = posts
  .filter(post => post.data.tags?.includes('Games'))
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

const title = 'Games';
const description = 'In-depth game reviews, recommendations, and guides';
---

<BaseLayout title={title} description={description}>
  <main class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-10">Games</h1>

    {gamesPosts.length === 0 ? (
      <p class="text-gray-600">No game reviews yet. Add posts with <code>tags: ["Games"]</code> to see them here.</p>
    ) : (
      <ul class="grid gap-10 md:grid-cols-2">
        {gamesPosts.map(post => (
          <li>
            <a href={`/post/${post.slug}/`} class="block group">
              <article>
                <h2 class="text-2xl font-semibold group-hover:text-primary transition">
                  {post.data.title}
                </h2>
                <time class="text-sm text-gray-500 block mt-2">
                  {new Date(post.data.publishDate).toLocaleDateString('en-GB', {
                    day: 'numeric',
                    month: 'short',
                    year: 'numeric'
                  })}
                </time>
                {post.data.description && (
                  <p class="mt-3 text-gray-700 line-clamp-3">
                    {post.data.description}
                  </p>
                )}
              </article>
            </a>
          </li>
        ))}
      </ul>
    )}
  </main>
</BaseLayout>
