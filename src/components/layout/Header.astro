---
// src/components/layout/Footer.astro
import SocialList from "@/components/SocialList.astro";
---

<footer class="mt-32 border-t border-border pt-12 pb-12 text-sm">
  <div class="mx-auto max-w-3xl px-4">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-4 mb-16">
      <!-- Brand & Description -->
      <div class="md:col-span-1">
        <h3 class="mb-4 text-xl font-bold">Astrotech-Games</h3>
        <p class="text-muted leading-relaxed">
          Where cutting-edge tech meets gaming. Deep dives into web game development, 
          performance optimization, emerging gadgets, industry news, and interactive experiences.
        </p>
        <div class="mt-8">
          <SocialList />
        </div>
      </div>

      <!-- Categories -->
      <div>
        <h4 class="mb-5 font-semibold text-base">Categories</h4>
        <ul class="space-y-3 text-muted">
          <li><a href="/posts/?tag=news" class="hover:text-accent transition-colors">News</a></li>
          <li><a href="/posts/?tag=games" class="hover:text-accent transition-colors">Games</a></li>
          <li><a href="/posts/?tag=gadgets" class="hover:text-accent transition-colors">Gadgets</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="mb-5 font-semibold text-base">Legal</h4>
        <ul class="space-y-3 text-muted">
          <li><a href="/privacy" class="hover:text-accent transition-colors">Privacy Policy</a></li>
          <li><a href="/terms" class="hover:text-accent transition-colors">Terms & Conditions</a></li>
          <li><a href="/disclaimer" class="hover:text-accent transition-colors">Disclaimer</a></li>
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h4 class="mb-5 font-semibold text-base">Connect</h4>
        <ul class="space-y-3 text-muted">
          <li><a href="/about" class="hover:text-accent transition-colors">About Us</a></li>
          <li><a href="/contact" class="hover:text-accent transition-colors">Contact</a></li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="text-center text-muted border-t border-border/50 pt-8">
      Â© 2025 Astrotech-Games. All rights reserved.
    </div>
  </div>
</footer>
